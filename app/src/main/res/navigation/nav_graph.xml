<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.netology.nmedia.ui.FeedFragment"
        tools:layout="@layout/feed_fragment">
        <action
            android:id="@+id/fromFeedToPostEdit"
            app:destination="@id/postEditFragment" />
        <action
            android:id="@+id/fromFeedToPostView"
            app:destination="@id/postViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/postEditFragment"
        android:name="ru.netology.nmedia.ui.PostEditFragment"
        tools:layout="@layout/post_edit_fragment">
        <argument
            android:name="initialContent"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/postViewFragment"
        android:name="ru.netology.nmedia.ui.PostViewFragment"
        android:label="post_view_fragment"
        tools:layout="@layout/post_view_fragment">
        <action
            android:id="@+id/fromPostViewToPostEdit"
            app:destination="@id/postEditFragment" />
        <argument
            android:name="postId"
            app:argType="long" />
    </fragment>

</navigation>